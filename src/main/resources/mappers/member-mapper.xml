<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.myapp.member.dao.MemberMapperDAO">
	<select id="getByMemberId" resultType="com.kh.myapp.member.vo.MemberVO" parameterType="String">
		select * from member where id = #{id}
	</select>
	
	<select id="getMemberList" resultType="com.kh.myapp.member.vo.MemberVO">
		select * from member
	</select>
	
	<insert id="memberInsert" parameterType="com.kh.myapp.member.vo.MemberVO">
		insert into member values(#{id},#{passwd},#{name},#{birth},#{phone},#{gender})
	</insert>
	
	<update id="memberUpdate" parameterType="com.kh.myapp.member.vo.MemberVO">
		update member set
			passwd 	= #{passwd},
			name 	= #{name},
			birth 	= #{birth},
			phone 	= #{phone},
			gender 	= #{gender}
		where id = #{id}
	</update>
	
	<delete id = "memberDelete" parameterType="String">
		delete from member where id = #{id}
	</delete>
</mapper>